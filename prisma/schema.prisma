generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) // อาจจะเก็บไว้หรือลบก็ได้ถ้าไม่ใช้เลย
  updatedAt DateTime @updatedAt // อาจจะเก็บไว้หรือลบก็ได้ถ้าไม่ใช้เลย
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  type      TransactionType
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TransactionType {
  INCOME
  EXPENSE
}
