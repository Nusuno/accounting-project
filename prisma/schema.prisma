// prisma/schema.prisma
datasource db {
  provider = "postgresql" // หรือฐานข้อมูลที่คุณใช้ เช่น mysql, sqlite
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique // ชื่อผู้ใช้ต้องไม่ซ้ำกัน
  password  String   // รหัสผ่านจะถูกเก็บในรูปแบบที่ hash แล้ว
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // หากคุณมี Model Transaction และต้องการเชื่อมโยง
  // transactions Transaction[]
}

