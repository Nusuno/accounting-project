generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ความสัมพันธ์กับ Transaction
  transactions Transaction[]
}

model Transaction {
  id        String          @id @default(cuid())
  title     String
  amount    Float           // เก็บ "จำนวน"
  type      TransactionType // เก็บ "ประเภท" (INCOME หรือ EXPENSE)
  category  String          // เก็บ "หมวดหมู่"
  createdAt DateTime        @default(now())
  userId    String          // ID ของ User ที่เป็นเจ้าของ Transaction นี้
  user      User            @relation(fields: [userId], references: [id]) // ความสัมพันธ์ไปยัง User
}

enum TransactionType {
  INCOME
  EXPENSE
}
